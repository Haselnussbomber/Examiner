	<Script file="ExaminerMixin.lua"/>
	<Script file="ExaminerItemSlotButtonMixin.lua"/>
	
	<Button name="ExaminerItemSlotButtonTemplate" inherits="ItemButtonTemplate" mixin="ExaminerItemSlotButtonMixin" virtual="true">
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentLevel" inherits="GameFontHighlightOutline" parentKey="level">
					<Anchors>
						<Anchor point="BOTTOM" relativePoint="BOTTOM" x="0" y="3"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<NormalTexture file="Interface\Buttons\UI-Quickslot2">
			<Size>
				<AbsDimension x="64" y="64"/>
			</Size>
			<Anchors>
				<Anchor point="CENTER">
					<Offset>
						<AbsDimension x="0" y="-1"/>
					</Offset>
				</Anchor>
			</Anchors>
		</NormalTexture>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnClick method="OnClick"/>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnUpdate function="CursorOnUpdate"/>
		</Scripts>
	</Button>

	<Frame name="Examiner" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent" inherits="ButtonFrameTemplate" mixin="ExaminerMixin">
		<Size x="338" y="424"/>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="ExaminerTitleText" inherits="GameFontNormal" parentKey="title">
					<Anchors>
						<Anchor point="TOP" relativePoint="TOP" x="0" y="-6"/>
					</Anchors>
				</FontString>
				<FontString name="ExaminerDetailText" inherits="SystemFont_Shadow_Small" parentKey="details" justifyH="CENTER" justifyV="MIDDLE">
					<Anchors>
						<Anchor point="TOP" relativeKey="$parent.title" y="-20"/>
						<Anchor point="BOTTOM" relativeKey="$parent.title" relativePoint="TOP" y="-52"/>
					</Anchors>
				</FontString>

				<!-- big ass texture in background-->
				<Texture name="ExaminerFaction" file="Interface\Timer\Panda-Logo" hidden="true">
					<Size x="256" y="256"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-10"/>
					</Anchors>
					<TexCoords left="0" right="1" top="0" bottom="1"/>	
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<!-- Tabs -->
			<Button name="ExaminerTab1" inherits="CharacterFrameTabButtonTemplate" mixin="ExaminerTabMixin" id="1" text="CHARACTER">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" x="11" y="2"/>
				</Anchors>
				<Scripts>
					<OnClick method="OnClick"/>
					<OnLeave method="OnLeave"/>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
						GameTooltip:SetText(CHARACTER_INFO, 1.0, 1.0, 1.0);
					</OnEnter>
				</Scripts>
			</Button>
			<Button name="ExaminerTab2" inherits="CharacterFrameTabButtonTemplate" mixin="ExaminerTabMixin" id="2" text="PVP">
				<Anchors>
					<Anchor point="LEFT" relativeTo="ExaminerTab1" relativePoint="RIGHT" x="-16" y="0"/>
				</Anchors>
				<Scripts>
					<OnClick method="OnClick"/>
					<OnLeave method="OnLeave"/>
					<OnEnter>
						GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
						GameTooltip:SetText(PLAYER_V_PLAYER, 1.0, 1.0, 1.0);
					</OnEnter>
				</Scripts>
			</Button>
			<Button name="ExaminerTab3" inherits="CharacterFrameTabButtonTemplate" mixin="ExaminerTabMixin" id="3" text="TALENTS">
