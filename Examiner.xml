							<Anchors>
								<Anchor point="TOPLEFT" x="0" y="0"/>
							</Anchors>
						</Texture>
						<Texture name="ExaminerModelFrameBackgroundTopRight" parentKey="BackgroundTopRight">
							<Size x="64" y="272.384"/>
							<Anchors>
